{% extends 'base.html.twig' %}

{% block title %}
  Fiche utilisateur
{% endblock %}
{% block body %}
  <div class="p-5">
    <div class="row">
      <div class="col">
        <h2>
          Fiche utilisateur
        </h2>
      </div>
      <div class="col-auto">
        <a class="btn btn-primary" href="{{ path('get-users') }}">Retour</a>
      </div>
    </div>

    <p>
      Prénom : {{ user.firstName }}
    </p>
    <p>
      Nom : {{ user.lastName }}
    </p>
    <p>
      Né(e) le : {{ user.birthday|date('d/m/Y') }}
    </p>
    <p>
      Description : {{ user.description }}
    </p>
  </div>
{% endblock %}
